page{  
  background-color: #f1f1f1;
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}  
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff; 
  font-size: 28rpx; 
  border-bottom: 2rpx solid #E5E5E5;
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
}  
.navbar .item.active{  
  color: #FFCC00;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 50%;  
  transform: translateX(-50%);
  width: 32rpx;  
  height: 4rpx;  
  background: #FFCC00;  
}
.orders-list{
  background-color: #fff;
  padding: 24rpx;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}
.num{
  float: left;
}
.pay{
  float: right;
  color: #FFCC00;
}
image{
  width: 128rpx;
  height: 180rpx;
  float: left;
}
.info{
  margin-top: 16rpx;
}
.mid{
  width: 408rpx;
  float: left;
  margin-left: 16rpx;
}
.name{
  height: 64rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.price-sheet{
  float: right;
}
.time{
  margin-top: 40rpx;
}
.address{
  margin-top: 15rpx;
}
.sheet{
  text-align: right;
}
.buttons{
  padding-top: 16rpx;
  border-top: 2rpx solid #E5E5E5;
  margin-top: 20rpx;
}
.button{
  padding: 5rpx 20rpx;
  float: right;
  border: 2rpx solid #999;
  border-radius: 6rpx; 
}
.button:last-child{
  margin-right: 24rpx;
}
.bg image{
  width: 300rpx;
  height: 300rpx;
}