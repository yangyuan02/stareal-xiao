/**index.wxss**/
.container {
  /* background-color: #F2f2f2; */
}
.userinfo {
  display: flex;
  flex-direction: column;
  padding: 50rpx 0;
  align-items: center;
  /* background: #f9f027; */
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #333;
}
.info_list{
  padding: 0 24rpx;
}
.weui_cell{
    position: relative;
    display: flex;
    padding: 30rpx 0;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 2rpx solid #dadada;
}
.weui_cell_hd{
  display: inline-block;
  width: 40rpx;
  margin-right: 10rpx;
}
.weui_cell_hd image{
  width: 100%;
  height: 40rpx;
  vertical-align: -4rpx;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 28rpx;
  color: #939393;
}
.badge{
  position: absolute;
  top: 36rpx;
  right: 80rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: #ff0000;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 16rpx;
}
